apiVersion: helm.toolkit.fluxcd.io/v2beta2
kind: HelmRelease
metadata:
  name: authentik-db
  namespace: identity
spec:
  interval: 10m
  timeout: 5m
  chart:
    spec:
      chart: cluster
      version: "0.2.0"
      sourceRef:
        kind: HelmRepository
        name: cluster
        namespace: identity
      interval: 5m
  releaseName: authentik-db
  targetNamespace: identity
  install:
    remediation:
      retries: 3
  upgrade:
    remediation:
      retries: 3
  test:
    enable: false
  driftDetection:
    mode: warn
    ignore:
      - paths: ["/spec/replicas"]
        target:
          kind: Deployment
  values:
    type: postgresql
    mode: standalone
    version:
      postgresql: "16"
    cluster:
      instances: 3
      resources:
        requests:
          cpu: "2"
          memory: 2Gi
        limits:
          cpu: "4"
          memory: 4Gi      
      storage:
        size: 50Gi      
        
    backups:
      enabled: false